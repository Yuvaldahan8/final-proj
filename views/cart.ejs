<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Your Cart</title>
        <link
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="cart.css">
        <link rel="stylesheet" href="style.css">
    </head>
    <body class="cart-body">
        <nav class="navbar navbar-expand-lg navbar-light bg-light" id="topNavBarCart">
            <a class="navbar-brand" href="#">Shop</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home">Home</a>
                    </li>
                </ul>
                <span class="navbar-text">Welcome, <%= user.name %>!</span>
                <a href="/logout" class="btn btn-danger ml-3">Logout</a>
            </div>
        </nav>

        
    <div class="container mt-5">
        <div class="checkout-container">
            <h2 class="mb-4">Your Order</h2>
            <% if (order && order.products && order.products.length > 0) { %>
                <div class="product-grid">
                    <% order.products.forEach((item, index) => { %>
                        <div class="product-item" data-product-id="<%= item.product._id %>">
                            <h5 class="productNameCart"><%= item.product.name %></h5>
                            <div class="quantity-control">
                                <button class="btn btn-sm btn-secondary decrease-quantity">-</button>
                                <span class="quantity"><%= item.quantity %></span>
                                <button class="btn btn-sm btn-secondary increase-quantity">+</button>
                            </div>
                            <p><strong>Price: $<span class="item-price"><%= item.product.price * item.quantity %></span></strong></p>
                            <button class="btn btn-danger btn-sm remove-item">Remove</button>
                        </div>
                    <% }); %>
                </div>
                <div class="order-summary mt-4 text-center">
                    <h3>Total: $<span id="totalAmount"><%= order.totalAmount %></span></h3>
                    <form action="/checkout" method="POST">
                        <button type="submit" class="btn btn-primary btn-lg mt-3">Proceed to Checkout</button>
                    </form>
                    <button id="clearCartBtn" class="btn btn-danger btn-lg mt-3">Clear Cart</button>
                </div>
            <% } else { %>
                <p>Your cart is empty.</p>
            <% } %>
        </div>
    </div>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="script.js"></script>
        <script>
            $(document).ready(function() {
                // פונקציה לעדכון הסכום הכולל
                function updateTotalAmount() {
                    let total = 0;
                    $('.item-price').each(function() {
                        total += parseFloat($(this).text());
                    });
                    $('#totalAmount').text(total.toFixed(2));
                }
    
                // הוספת כמות
                $('.increase-quantity').on('click', function() {
                    let quantitySpan = $(this).siblings('.quantity');
                    let quantity = parseInt(quantitySpan.text()) + 1;
                    quantitySpan.text(quantity);
