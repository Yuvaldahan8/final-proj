<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Average Price By Supplier</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div style="width: 75%;">
        <canvas id="averagePriceBySupplierChart"></canvas>
    </div>
    <script>
        const ctx = document.getElementById('averagePriceBySupplierChart').getContext('2d');
        const data = {
            labels: <%- JSON.stringify(averagePriceBySupplier.map(item => item.supplierDetails.name)) %>,
            datasets: [{
                label: 'Average Price by Supplier',
                data: <%- JSON.stringify(averagePriceBySupplier.map(item => item.averagePrice)) %>,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        };
        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };
        new Chart(ctx, config);
    </script>
</body>
</html>
