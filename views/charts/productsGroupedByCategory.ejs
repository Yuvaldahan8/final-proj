<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Grouped By Category</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div style="width: 75%;">
        <canvas id="productsGroupedByCategoryChart"></canvas>
    </div>
    <script>
        const ctx = document.getElementById('productsGroupedByCategoryChart').getContext('2d');
        const data = {
            labels: <%- JSON.stringify(productsGroupedByCategory.map(item => item.categoryDetails.name)) %>,
            datasets: [{
                label: 'Products by Category',
                data: <%- JSON.stringify(productsGroupedByCategory.map(item => item.count)) %>,
                backgroundColor: 'rgba(255, 159, 64, 0.2)',
                borderColor: 'rgba(255, 159, 64, 1)',
                borderWidth: 1
            }]
        };
        const config = {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };
        new Chart(ctx, config);
    </script>
</body>
</html>
