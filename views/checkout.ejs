<body class="checkout-body">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Shop</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/home">Home</a>
                </li>
            </ul>
            <span class="navbar-text">Welcome, <%= user.name %>!</span>
            <a href="/logout" class="btn btn-danger ml-3">Logout</a>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="mb-4">Checkout</h2>
        <div class="order-summary">
            <h3>Total: $<%= order.totalAmount %></h3>
            <ul class="list-group mb-4">
                <% order.products.forEach(item => { %>
                    <li class="list-group-item">
                        <strong><%= item.product.name %></strong> - Quantity: <%= item.quantity %> - Price: $<%= item.product.price * item.quantity %>
                    </li>
                <% }); %>
            </ul>
            <div id="paypal-button-container" class="btn btn-primary btn-lg">Confirm and Pay</div>
        </div>
    </div>

